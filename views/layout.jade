html(lang="zh-CN")
    head
        meta(charset="utf-8")
        meta(http-equiv="X-UA-Compatible",content="IE=edge")
        meta(name="renderer" content="webkit")
        meta(name="viewport",content="width=device-width, initial-scale=0.4, maximum-scale=1, user-scalable=yes")
